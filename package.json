{
  "name": "@salesforce/sfdx-plugin-lwc-test",
  "description": "Tools for unit testing Lightning web components in a Salesforce DX workspace",
  "version": "0.1.1",
  "dependencies": {
    "@oclif/command": "^1",
    "@oclif/config": "^1",
    "@oclif/errors": "^1",
    "@salesforce/command": "^1.3.4",
    "@salesforce/core": "^1.3.0",
    "@salesforce/kit": "^1.0.4",
    "semver-compare": "^1.0.0",
    "signal-exit": "^3.0.2",
    "tslib": "^1"
  },
  "devDependencies": {
    "@oclif/dev-cli": "^1.22.0",
    "@oclif/plugin-help": "^1",
    "@oclif/test": "^1",
    "@salesforce/dev-config": "^1.1.0",
    "@salesforce/ts-sinon": "^1.0.4",
    "@salesforce/ts-types": "^1.1.2",
    "@types/chai": "4",
    "@types/jsforce": "^1.9.5",
    "@types/mocha": "5",
    "@types/node": "^10",
    "chai": "^4",
    "globby": "^8",
    "isbinaryfile": "^3.0.3",
    "mocha": "^5",
    "nyc": "^12",
    "sinon": "^5",
    "ts-node": "^6",
    "typescript": "^3"
  },
  "engines": {
    "node": ">=8.0.0"
  },
  "files": [
    "/lib",
    "/messages",
    "/npm-shrinkwrap.json",
    "/oclif.manifest.json"
  ],
  "keywords": [
    "sfdx-plugin"
  ],
  "license": "MIT",
  "oclif": {
    "bin": "sfdx",
    "commands": "./lib/commands",
    "topics": {
      "force": {
        "subtopics": {
          "lightning": {
            "subtopics": {
              "lwc": {
                "description": "tools for unit testing Lightning web components in a Salesforce DX workspace"
              }
            }
          }
        }
      }
    },
    "devPlugins": [
      "@oclif/plugin-help"
    ]
  },
  "repository": "salesforce/sfdx-plugin-lwc-test",
  "scripts": {
    "check-license-headers": "node ./scripts/checkLicenseHeaders.js",
    "build": "tsc",
    "postpack": "rm -f oclif.manifest.json npm-shrinkwrap.json",
    "posttest": "tsc -p test --noEmit && tslint -p test -t stylish",
    "prepack": "rm -rf lib && tsc && oclif-dev manifest && oclif-dev readme && npm shrinkwrap",
    "test": "nyc mocha --forbid-only \"test/**/*.test.ts\"",
    "version": "oclif-dev readme && git add README.md"
  }
}
